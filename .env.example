# Web3 Guardian Backend Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Core Application Settings
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production
API_HOST=0.0.0.0
API_PORT=8000

# Tenderly Configuration (Required for dynamic analysis)
TENDERLY_API_KEY=your_tenderly_api_key_here
TENDERLY_ACCOUNT_SLUG=account
TENDERLY_PROJECT_SLUG=project
TENDERLY_API_URL=https://api.tenderly.co/api/v1/account/account/project/project/
TENDERLY_SECRET_TOKEN=your-tenderly-secret-token

# Google Gemini API Configuration (Required for RAG pipeline)
GEMINI_API_KEY=

# Database Configuration
DATABASE_URL=postgresql://web3guardian:password@localhost:5432/web3guardian
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# Redis Configuration (Required for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Security Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "chrome-extension://*", "moz-extension://*"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
ANALYSIS_RATE_LIMIT=10
ANALYSIS_RATE_LIMIT_WINDOW=60

# Vector Database Configuration (for RAG)
VECTOR_DB_URL=http://localhost:8080
VECTOR_DB_COLLECTION=vulnerabilities
VECTOR_DB_DIMENSION=1536

# Blockchain RPC URLs (Optional - for direct blockchain queries)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your-infura-key
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/your-infura-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Etherscan API Keys (for contract verification)
ETHERSCAN_API_KEY=your-etherscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
ARBISCAN_API_KEY=your-arbiscan-api-key
OPTIMISTIC_ETHERSCAN_API_KEY=your-optimistic-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
SNOWTRACE_API_KEY=your-snowtrace-api-key

# Background Tasks Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_METRICS_ENABLED=True
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# File Storage (for reports and cache)
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage
AWS_S3_BUCKET=web3guardian-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@web3guardian.dev
SMTP_PASSWORD=your-email-password
SMTP_TLS=True

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_VULNERABILITY_SCANNING=True
ENABLE_GAS_OPTIMIZATION=True
ENABLE_TRANSACTION_SIMULATION=True
ENABLE_PHISHING_DETECTION=True
ENABLE_ANALYTICS=True
ENABLE_CACHING=True

# Development Settings
RELOAD_ON_CHANGE=True
MOCK_EXTERNAL_APIS=False
BYPASS_RATE_LIMITS=False

# Production Settings (Override in production)
# DEBUG=False
# LOG_LEVEL=WARNING
# SECRET_KEY=your-very-secure-production-key
# ALLOWED_ORIGINS=["https://web3guardian.dev", "chrome-extension://*"]
# DATABASE_URL=postgresql://web3guardian:secure-password@prod-db:5432/web3guardian
# REDIS_URL=redis://prod-redis:6379/0